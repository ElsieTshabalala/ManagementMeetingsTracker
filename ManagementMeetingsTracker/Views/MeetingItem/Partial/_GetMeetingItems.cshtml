@using ManagementMeetingsTracker.Resources;

@model ManagementMeetingsTracker.Models.MeetingItemModel

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MeetingItemStatusId)           
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MeetingItem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remark)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.MeetingItems)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MeetingItemStatusDescription)               
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeetingItem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remark)
            </td>
            <td>            
                        
            @Ajax.ActionLink(Labels.Edit, MVC.MeetingItem.GetAddEditMeetingItem(item.MeetingId, item.MeetingItemId),
                                new AjaxOptions
                                {
                                    HttpMethod = "GET",
                                    InsertionMode = InsertionMode.Replace,
                                    UpdateTargetId = "modalBody",
                                    OnComplete = "ShowPopup",
                                }, new
                                {
                                    @class = "",
                                    @id = "EditMeetingItemId"
                                })

            </td>
        </tr>
    }

</table>